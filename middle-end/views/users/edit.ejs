<% include ../partials/head %>
	<% include ../partials/header %>

		<div class="rowMain">
			<h1 class="pageTitle">User Admin</h1>
			<div class="row">
				<div class="twelveColumns">
					<h3>Edit <%= email %></h3>
				</div>
				<div class="twelveColumns">
					<form action="/admin/users/<%= id.toString() %>" method="post">
						<div class="row">
							<div class="sixColumns">
								
								<label for="email">Email</label>
								<input id="email" type="email" name="email" 
									   value="<%= email %>">
							</div>
						</div>
						<div class="row">
							<div class="sixColumns">
								
								<label for="password">Password</label>
								<input id="password" type="password" 
									   name="password" value="">
							</div>
						</div>
						<div class="row">
							<div class="sixColumns right">
								<a href="/admin/users" class="button default">Cancel</a>
								<a class="alert button" id="confirmDeleteUser" 
								   href="/admin/users/<%= id.toString() %>/delete">Delete</a>
								<button type="submit" class="button primary">Submit</button>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>


		<script>
			var deleteBtn = document.getElementById('confirmDeleteUser');
			deleteBtn.onclick = function() {

				var deleteConfirm = confirm('Are you sure you want to delete <%= email %>?');

				if (!deleteConfirm) {
					return false;
				}
			};
		</script>

<% include ../partials/footer %>